	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"packages": {},
				"exec": [
					"const now = new Date();\r",
					"const yyyy = now.getFullYear();\r",
					"const mm = String(now.getMonth() + 1).padStart(2, '0');\r",
					"const dd = String(now.getDate()).padStart(2, '0');\r",
					"const today = `${yyyy}${mm}${dd}`;\r",
					"\r",
					"pm.environment.set(\"ORDER_DATE\", today);\r",
					"\r",
					"let counter = parseInt(pm.environment.get(\"ORDER_COUNTER\") || \"0\", 10) + 1;\r",
					"const paddedCounter = String(counter).padStart(3, '0');\r",
					"pm.environment.set(\"ORDER_COUNTER\", paddedCounter);\r",
					"\r",
					"const orderId = `ORD_${today}_${paddedCounter}`;\r",
					"pm.environment.set(\"ORDER_ID\", orderId);"
				]
			}
